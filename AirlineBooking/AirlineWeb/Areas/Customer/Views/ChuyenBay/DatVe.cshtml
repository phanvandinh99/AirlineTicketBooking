@model AirlineWeb.Models.VeChuyenBay
@{
    ViewBag.Title = "Đặt vé";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutDetailCustomer.cshtml";
}

<!-- Breadcrumb -->
<div class="breadcrumb-area breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Customer" })">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ChuyenBay", new { area = "Customer" })">Chuyến bay</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Đặt vé</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Đặt vé Section -->
<div class="booking-section pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Thông tin chuyến bay -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="isax isax-airplane me-2"></i>Thông tin chuyến bay</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="flight-info">
                                    <h6 class="text-muted mb-2">Chuyến bay</h6>
                                    <h5 class="mb-1">@Model.LichBay.ChuyenBay.SoHieuChuyenBay</h5>
                                    <p class="text-muted mb-0">@Model.LichBay.ChuyenBay.HangHangKhong.TenHang</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="flight-info">
                                    <h6 class="text-muted mb-2">Hạng vé</h6>
                                    <h5 class="mb-1">@Model.HangVe.TenHangVe</h5>
                                    <p class="text-success fw-bold mb-0">@(Model.GiaVND?.ToString("N0") ?? "0") VNĐ</p>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="flight-info">
                                    <h6 class="text-muted mb-2">Khởi hành</h6>
                                    <h5 class="mb-1">@Model.LichBay.NgayGioKhoiHanh.ToString("HH:mm")</h5>
                                    <p class="mb-0">@Model.LichBay.ChuyenBay.TuyenBay.SanBay.TenSanBay</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="flight-info">
                                    <h6 class="text-muted mb-2">Hạ cánh</h6>
                                    <h5 class="mb-1">@Model.LichBay.NgayGioHaCanh.ToString("HH:mm")</h5>
                                    <p class="mb-0">@Model.LichBay.ChuyenBay.TuyenBay.SanBay1.TenSanBay</p>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <p class="text-center mb-0">
                                <small class="text-muted">Ngày bay: @Model.LichBay.NgayBay.ToString("dd/MM/yyyy")</small>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Form đặt vé -->
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="isax isax-user me-2"></i>Thông tin hành khách</h4>
                    </div>
                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                <i class="isax isax-danger me-2"></i>@TempData["ErrorMessage"]
                            </div>
                        }
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                <i class="isax isax-tick-circle me-2"></i>@TempData["SuccessMessage"]
                            </div>
                        }

                        <form method="post" action="/Customer/ChuyenBay/DatVe">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="maVe" value="@Model.MaVe" />
                            
                            <div class="mb-3">
                                <label>Họ và tên hành khách:</label>
                                <input type="text" name="HoTenHanhKhach" class="form-control" placeholder="Nhập họ và tên" />
                            </div>
                            
                            <div class="mb-3">
                                <label>Ngày sinh:</label>
                                <input type="date" name="NgaySinh" class="form-control" />
                            </div>
                            
                            <div class="mb-3">
                                <label>Số căn cước công dân:</label>
                                <input type="text" name="CanCuoc" class="form-control" placeholder="Nhập số căn cước" />
                            </div>
                            
                            <div class="mb-3">
                                <label>Email:</label>
                                <input type="email" name="Email" class="form-control" placeholder="Nhập email" />
                            </div>
                            
                            <div class="mb-3">
                                <label>Số điện thoại:</label>
                                <input type="text" name="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                            </div>
                            
                            <div class="alert alert-info">
                                <strong>Lưu ý:</strong> Số căn cước sẽ được sử dụng làm tài khoản đăng nhập
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("ChiTiet", "ChuyenBay", new { area = "Customer", id = Model.LichBay.ChuyenBay.MaChuyenBay })" class="btn btn-secondary">
                                    <i class="isax isax-arrow-left me-2"></i>Quay lại
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="isax isax-ticket me-2"></i>Xác nhận đặt vé
                                </button>
                            </div>
                        </form>



                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Thông tin giá -->
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="isax isax-dollar-circle me-2"></i>Chi tiết giá</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Giá vé:</span>
                            <span>@(Model.GiaVND?.ToString("N0") ?? "0") VNĐ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Thuế và phí:</span>
                            <span>0 VNĐ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Tổng cộng:</span>
                            <span class="text-success">@(Model.GiaVND?.ToString("N0") ?? "0") VNĐ</span>
                        </div>
                    </div>
                </div>

                <!-- Thông tin liên hệ -->
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="isax isax-call me-2"></i>Hỗ trợ</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2"><i class="isax isax-call me-2"></i>Hotline: 1900-xxxx</p>
                        <p class="mb-2"><i class="isax isax-message me-2"></i>Email: support@airline.com</p>
                        <p class="mb-0"><i class="isax isax-clock me-2"></i>Giờ làm việc: 8:00 - 22:00</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



