@model AirlineWeb.Models.SanBay
@{
    ViewBag.Title = "Cập nhật Sân Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Cập nhật Sân Bay</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaSanBay, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.MaSanBay, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.TenSanBay, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.TenSanBay, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.TenSanBay, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ThanhPho, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.ThanhPho, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.QuocGia, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.QuocGia, new { @class = "form-control" })
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "SanBay", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fa fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

