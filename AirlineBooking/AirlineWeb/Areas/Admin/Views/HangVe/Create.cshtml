@model AirlineWeb.Models.HangVe
@{
    ViewBag.Title = "Thêm mới Hạng Vé";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Thêm mới Hạng Vé</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaHangVe, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.MaHangVe, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.MaHangVe, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.TenHangVe, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.TenHangVe, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.TenHangVe, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.TyLeGia, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.TyLeGia, new { @class = "form-control", required = "required", type = "number", step = "0.01", min = "0" })
                            @Html.ValidationMessageFor(m => m.TyLeGia, null, new { @class = "text-danger" })
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "HangVe", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-save"></i> Lưu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

