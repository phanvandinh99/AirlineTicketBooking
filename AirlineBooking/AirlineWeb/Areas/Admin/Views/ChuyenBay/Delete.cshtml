@model AirlineWeb.Models.ChuyenBay
@{
    ViewBag.Title = "Xóa Chuyến Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Xác nhận xóa Chuyến Bay</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4">Bạn có chắc chắn muốn xóa chuyến bay sau không?</p>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Mã Chuyến Bay</dt>
                        <dd class="col-sm-8">@Model.MaChuyenBay</dd>
                        <dt class="col-sm-4">Tuyến Bay</dt>
                        <dd class="col-sm-8">@Model.MaTuyenBay</dd>
                        <dt class="col-sm-4">Máy Bay</dt>
                        <dd class="col-sm-8">@Model.MaMayBay</dd>
                        <dt class="col-sm-4">Số Hiệu</dt>
                        <dd class="col-sm-8">@Model.SoHieuChuyenBay</dd>
                        <dt class="col-sm-4">Trạng Thái</dt>
                        <dd class="col-sm-8">@(Model.TrangThai == 0 ? "Hoạt động" : "Ngừng")</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    @using (Html.BeginForm("Delete", "ChuyenBay", FormMethod.Post, new { area = "Admin" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.MaChuyenBay)
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xóa
                        </button>
                    }
                    <a href="@Url.Action("Index", "ChuyenBay", new { area = "Admin" })" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

