@model AirlineWeb.Models.ChuyenBay
@{
    ViewBag.Title = "Cập nhật Chuyến Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Cập nhật Chuyến Bay</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaChuyenBay, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.MaChuyenBay, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaTuyenBay, htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownList("MaTuyenBay", null, "-- Chọn tuyến bay --", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.MaTuyenBay, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaHangHangKhong, htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownList("MaHangHangKhong", null, "-- Chọn hãng hàng không --", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.MaHangHangKhong, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaMayBay, htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownList("MaMayBay", null, "-- Chọn máy bay --", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.MaMayBay, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.SoHieuChuyenBay, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.SoHieuChuyenBay, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.SoHieuChuyenBay, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.TrangThai, htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.TrangThai, new SelectList(new[] { new { Value = 0, Text = "Hoạt động" }, new { Value = 1, Text = "Ngừng" } }, "Value", "Text"), "-- Chọn trạng thái --", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.TrangThai, null, new { @class = "text-danger" })
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "ChuyenBay", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fa fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

