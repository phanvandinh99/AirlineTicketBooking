@model AirlineWeb.Models.LichBay
@{
    ViewBag.Title = "Xóa Lịch Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Xác nhận xóa Lịch Bay</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4">Bạn có chắc chắn muốn xóa lịch bay sau không?</p>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Mã Lịch Bay</dt>
                        <dd class="col-sm-8">@Model.MaLichBay</dd>
                        <dt class="col-sm-4">Mã Chuyến Bay</dt>
                        <dd class="col-sm-8">@Model.MaChuyenBay</dd>
                        <dt class="col-sm-4">Khởi Hành</dt>
                        <dd class="col-sm-8">@Model.NgayGioKhoiHanh.ToString("dd/MM/yyyy HH:mm")</dd>
                        <dt class="col-sm-4">Hạ Cánh</dt>
                        <dd class="col-sm-8">@Model.NgayGioHaCanh.ToString("dd/MM/yyyy HH:mm")</dd>
                        <dt class="col-sm-4">Ngày Bay</dt>
                        <dd class="col-sm-8">@Model.NgayBay.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    @using (Html.BeginForm("Delete", "LichBay", FormMethod.Post, new { area = "Admin" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.MaLichBay)
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xóa
                        </button>
                    }
                    <a href="@Url.Action("Index", "LichBay", new { area = "Admin" })" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

