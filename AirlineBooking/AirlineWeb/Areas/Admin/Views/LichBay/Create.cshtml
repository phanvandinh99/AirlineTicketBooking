@model AirlineWeb.Models.LichBay
@{
    ViewBag.Title = "Thêm mới Lịch Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Thêm mới Lịch Bay</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MaChuyenBay, htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownList("MaChuyenBay", null, "-- Chọn chuyến bay --", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.MaChuyenBay, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.NgayGioKhoiHanh, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.NgayGioKhoiHanh, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
                            @Html.ValidationMessageFor(m => m.NgayGioKhoiHanh, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.NgayGioHaCanh, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.NgayGioHaCanh, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
                            @Html.ValidationMessageFor(m => m.NgayGioHaCanh, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.NgayBay, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.NgayBay, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                            @Html.ValidationMessageFor(m => m.NgayBay, null, new { @class = "text-danger" })
                        </div>
                        <hr />
                        <h5 class="mb-3">Cấu hình ghế và giá cho từng hạng vé</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Hạng vé</th>
                                    <th>Số lượng ghế</th>
                                    <th>Giá gốc (VND)</th>
                                    <th>Tỷ lệ giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hv in (IEnumerable<AirlineWeb.Models.HangVe>)ViewBag.HangVes)
                                {
                                    <tr>
                                        <td>@hv.TenHangVe</td>
                                        <td><input type="number" name="SoLuong_@hv.MaHangVe" min="0" class="form-control" value="0" required /></td>
                                        <td><input type="number" name="Gia_@hv.MaHangVe" min="0" step="1000" class="form-control" value="0" required /></td>
                                        <td>@hv.TyLeGia</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "LichBay", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-save"></i> Lưu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

